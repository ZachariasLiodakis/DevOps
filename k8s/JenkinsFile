pipeline{
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        KUBE_CONFIG = credentials('kubeconfig-creds')
    }

    parameters {
        booleanParam(name: 'INSTALL_POSTGRES', defaultValue: true, description: 'Install PostgreSQL')
        booleanParam(name: 'INSTALL_SPRING', defaultValue: true, description: 'Install Spring Boot app')
        booleanParam(name: 'INSTALL_EMAIL', defaultValue: true, description: 'Install EmailService')
    }

    stages {
        stage('Checkout') {
            steps { git url: '...', credentialsId: 'git-creds' }
        }
        
        stage('Deploy to K8s via Ansible') {
            steps {
                ansiblePlaybook(
                    playbook: 'ansible/deploy-k8s.yml',
                    inventory: 'ansible/hosts.yaml',
                    extras: "-e kubeconfig=${KUBE_CONFIG}"
                )
            }
        }
    }
}
